<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <portlet>
    <description xml:lang="EN">The portlet for configuring the oAuth consumer</description>
    <portlet-name>OAuthConsumerManagement</portlet-name>
    <display-name>OAuth Consumer Managemenet Portlet</display-name>
    <portlet-class>org.oauthconsumer.portlet.OauthConsumerPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <portlet-info>
      <title>OAuthConsumer</title>
      <short-title>oAuthConsumer</short-title>
      <keywords>System</keywords>
    </portlet-info>
    <container-runtime-option>
      <name>javax.portlet.actionScopedRequestAttributes</name>
      <value>true</value>
   </container-runtime-option>
  </portlet>

</portlet-app>