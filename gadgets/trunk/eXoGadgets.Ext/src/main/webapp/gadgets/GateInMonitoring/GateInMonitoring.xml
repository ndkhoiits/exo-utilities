<Module>
   <ModulePrefs author="eXoPlatform"
                title="GateIn Monitoring"
                directory_title="GateIn Monitoring"
                title_url="http://www.exoplatform.org"
                description="GateIn Monitoring"
                thumbnail="http://localhost:8080/eXoGadgets.Ext/skin/DefaultSkin/portletIcons/GateInMonitoring.png"                
                height="227">
      <Locale lang="ar" language_direction="rtl"/>
      <Require feature="dynamic-height"/>
      <Require feature="minimessage"/>
      <Require feature="views"/>
   </ModulePrefs>
   <Content type="html" view="home">
      <![CDATA[
        <link rel="stylesheet" type="text/css" href="style.css"></link>
        <script src="jquery-1.4.2.min.js" type="text/javascript"></script>		
		<script src="script.js" type="text/javascript"></script>	
		<script src="handlers.js" type="text/javascript"></script>
		<script type="text/javascript">
			gadgets.util.registerOnLoadHandler(eXo.gadget.GateInMonitoring.init);
		</script>
		<body>
			<div class="home">
				<div id="servicesArea" align="center">
					GateIn Service:<select id="servicesSelector"></select>
				</div>
				
				<div id="methodsArea" align="center">
					Method:<select id="methodsSelector"></select>
				</div>
				
				<div id="informationArea" class="UIGrid">
					<table id="informationTable" style="width: 100%;">
						<thead>
							<tr>
								<td>Name</td>
								<td>Value</td>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>name</td>
								<td id="methodName"></td>
							</tr>
							<tr>
								<td>description</td>
								<td id="methodDescription"></td>
							</tr>
							<tr>
								<td>method</td>
								<td id="reqMethod"></td>
							</tr>
							<tr>
								<td>parameters</td>
								<td>
									<table id="parametersTable" style="width: 100%;">
									</table>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>			
		</body>
	]]>
   </Content>
   <Content type="html" view="canvas">
      <![CDATA[
        <link rel="stylesheet" type="text/css" href="style.css"></link>
        <script src="jquery-1.4.2.min.js"></script>     
		<script src="script.js"></script>
		<script src="handlers.js"></script>
		<script type="text/javascript">
			gadgets.util.registerOnLoadHandler(eXo.gadget.GateInMonitoring.init);
		</script>
		<body>
			<div class="canvas">
				<div id="servicesArea" align="center">
					GateIn Service:<select id="servicesSelector"></select>
				</div>
				
				<div id="informationArea" class="UIGrid">
					<table id="informationTable" style="width: 100%;">
						<thead>
							<tr>
								<td style="width: 0%;">Name</td>
								<td style="width: 25%;">Method</td>
								<td style="width: 50%;">Parameters</td>
								<td style="width: 75%;">Action</td>
							</tr>
						</thead>
						<tbody id="methodsForCanvas">
						</tbody>
					</table>
				</div>
			</div>			
		</body>
	]]>
   </Content>
</Module>